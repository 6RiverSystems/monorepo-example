{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "../../dist/out-tsc",
		"types": ["node"],

		"module": "commonjs",
		"target": "es2015",
		"lib": ["es2017"],
		"declaration": false,
		"noImplicitAny": false,
		"removeComments": true,
		"moduleResolution": "node"
	},
	"exclude": ["**/*.spec.ts"],
	"include": ["**/*.ts"]
}
