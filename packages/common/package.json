{
  "name": "@sixriver/template-common",
  "version": "0.0.0-development",
  "description": "Sixriver Template Common",
  "keywords": [
  ],
  "main": "dist/src/index.js",
  "engines": {
    "node": "10.15.3"
  },
  "scripts": {
    "build": "npm run build:only",
    "rebuild": "npm-run-all clean build",
    "build:only": "tsc",
    "build:watch": "tsc --watch",
    "build:only:gulp": "gulp compile --gulpfile '../../repo-tools/build-configs/gulpfile.js' --cwd './'",
    "build:watch:gulp": "gulp watch --gulpfile '../../repo-tools/build-configs/gulpfile.js' --cwd './'",
    "clean": "rm -rf dist*",
    "test": "npm-run-all build test-ci",
    "test-pact": "npm-run-all build test-ci-pact",
    "test-ci": "../../repo-tools/scripts/test.sh",
    "test-ci-pact": "true",
    "unit": "../../repo-tools/scripts/test.sh --opts test/unit.opts",
    "publish-pacts": "true",
    "pretest-ci-pact": "rm -rf pacts",
    "test:no-cover": "NODE_ENV=test mocha ${MOCHA_OPTS}",
    "test:debug": "npm run test:no-cover -- --debug-brk",
    "coverage": "NODE_ENV=test nyc report --reporter=text-lcov > coverage/lcov.info",
    "prestart": "npm run build:only",
    "start": "false",
    "release": "true",
    "htmlcov:gen": "NODE_ENV=test nyc report --reporter=html",
    "htmlcov:view": "npm run htmlcov:$(bash -c 'echo $OSTYPE')",
    "htmlcov:linux-gnu": "xdg-open ./coverage/.nyc_output/index.html",
    "htmlcov:darwin": "open ./coverage/.nyc_output/index.html",
    "htmlcov": "npm-run-all htmlcov:gen htmlcov:view",
    "eslint": "eslint --ext .ts,.js ${ESLINT_OPTS} ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/6RiverSystems/rush-monorepo-boilerplate.git"
  },
  "publishConfig": {
    "registry": "https://sixriver.jfrog.io/sixriver/npm-local/"
  },
  "author": "",
  "license": "",
  "files": [
    "README.md",
    "dist*/src",
    "dist*/index*",
    "src"
  ],
  "dependencies": {
  },
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/chai-as-promised": "7.1.0",
    "@types/chai-string": "1.4.1",
    "@types/chance": "1.0.1",
    "@types/lodash": "4.14.129",
    "@types/mocha": "5.2.6",
    "@types/node": "10.14.6",
    "@types/sinon": "5.0.2",
    "@typescript-eslint/eslint-plugin": "1.9.0",
    "@typescript-eslint/parser": "1.9.0",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "chai-string": "1.4.0",
    "chance": "1.0.13",
    "eslint": "5.4.0",
    "eslint-config-6river": "2.0.0",
    "eslint-config-google": "0.12.0",
    "eslint-plugin-6river": "1.0.6",
    "eslint-plugin-mocha": "5.0.0",
    "lodash": "4.17.11",
    "mocha": "5.1.1",
    "mocha-junit-reporter": "1.15.0",
    "mocha-lcov-reporter": "1.3.0",
    "npm-run-all": "4.1.3",
    "nyc": "13.0.1",
    "sinon": "6.3.4",
    "source-map-support": "0.5.9",
    "typescript": "3.4.5"
  }
}
