{
	"$schema": "http://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig-base.json",
	"compilerOptions": {
		"rootDir": ".",
		"outDir": "dist",
		// gulp-typescript is not yet compatible with incremental
		"incremental": false
	},
	"include": [
		"src",
		"test",
		"index.ts"
	],
	"exclude": [
		"node_modules/**",
		"packages/*/node_modules/**",
		"**/*.d.ts"
	]
}
