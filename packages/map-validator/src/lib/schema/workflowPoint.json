{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://6river.com/schema/mapStack/workflowPoint.json",
	"title": "workflowPoint",
	"description": "A point that represents a location for part of a workflow",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"type": {
			"type": "string",
			"pattern": "Feature"
		},
		"geometry": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"type": {
					"type": "string",
					"pattern": "Point"
				},
				"coordinates": {
					"$ref": "./point.json"
				}
			}
		},
		"properties": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"name": {
					"type": "string",
					"pattern": "^[A-Za-z0-9\\-_:\\(\\)]+(?: +[A-Za-z0-9\\-_:\\(\\)]+)*$",
					"minLength": 1
				},
				"id": {
					"$ref": "./uuid.json"
				},
				"object": {
					"type": "string",
					"pattern": "vertex"
				},
				"target": {
					"type": "string",
					"enum": [
						"meetingPoint",
						"induct",
						"userDirectedInduct",
						"takeoff",
						"takeoffDestination",
						"takeoffException",
						"postCharge",
						"preCharge",
						"replenInduct",
						"replenMeetingPoint",
						"replenTakeoff",
						"postPick",
						"generic"
					]
				},
				"orientation": {
					"type": "integer",
					"minimum": 0,
					"maximum": 360
				},
				"labels": {
					"type": "array",
					"minItems": 1,
					"items": {
						"type": "string",
						"pattern": "^$|^[0-9a-zA-Z\\-_]+$"
					}
				},
				"workflowOptions": {
					"type": "array",
					"items": {
						"type": "string",
						"pattern": "^$|^[0-9a-zA-Z\\-_]+$"
					}
				}
			},
			"required": ["object", "name", "id", "orientation", "labels", "workflowOptions"]
		}
	},
	"required": ["type", "geometry", "properties"]
}
